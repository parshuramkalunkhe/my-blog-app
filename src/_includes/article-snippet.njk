<li class="snippet">
    <img src="{{ post.data.image }}" alt="{{ post.data.imageAlt }}">
    <h3><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
    <p class="author">by <span>{{ post.data.author }}</span> on <span>{{ post.data.date | postDate }}</span></p>
    <p class="description">{{ post.data.description }}  <a href="{{ post.url }}">Continue Reading</a></p>
</li>